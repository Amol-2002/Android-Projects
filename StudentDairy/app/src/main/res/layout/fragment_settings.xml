<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="#1E5AA8"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="22dp">

            <ImageView
                android:id="@+id/setarrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrowback"
                android:layout_marginEnd="10dp"
                android:contentDescription="Back"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- ================= SCROLLABLE CARDS ================= -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Template -->
            <LinearLayout
                android:id="@+id/card_personal_details"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/profile"
                    android:contentDescription="Personal Details Icon"
                    app:tint="#1E5AA8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Personal Details"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_personal_details"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to Personal Details"/>
            </LinearLayout>

            <!-- Contact Details -->
            <LinearLayout
                android:id="@+id/card_contact_details"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/phoneblack"
                    android:contentDescription="Contact Details Icon"
                    app:tint="#1E5AA8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Contact Details"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_contact_details"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to Contact Details"/>
            </LinearLayout>

            <!-- Postal Details -->
            <LinearLayout
                android:id="@+id/card_postal_details"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/postaldetails"
                    android:contentDescription="Postal Details Icon"
                    app:tint="#1E5AA8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Postal Details"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_postal_details"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to Postal Details"/>
            </LinearLayout>

            <!-- About Us -->
            <LinearLayout
                android:id="@+id/card_about_us"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/aboutus"
                    android:contentDescription="About Us Icon"
                    app:tint="#1E5AA8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_about_us"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to About Us"/>
            </LinearLayout>

            <!-- Privacy Policy -->
            <LinearLayout
                android:id="@+id/card_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/privacypolicy"
                    android:contentDescription="Privacy Policy Icon"
                    app:tint="#1E5AA8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Privacy Policy"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_privacy_policy"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to Privacy Policy"/>
            </LinearLayout>

            <!-- Support -->
            <LinearLayout
                android:id="@+id/card_support"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/support"
                    android:contentDescription="Support Icon"
                    app:tint="#1E5AA8" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_support"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to Support"/>
            </LinearLayout>

            <!-- Change Password -->
            <LinearLayout
                android:id="@+id/card_change_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/changepassword"
                    android:contentDescription="Change Password Icon"
                    app:tint="#1E5AA8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_change_password"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Go to Change Password"/>
            </LinearLayout>

            <!-- Share App -->
            <LinearLayout
                android:id="@+id/card_share_app"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/shareapp"
                    android:contentDescription="Share App Icon"
                    app:tint="#1E5AA8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_share_app"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Share App"/>
            </LinearLayout>

            <!-- Rate App -->
            <LinearLayout
                android:id="@+id/card_rate_app"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/rateapp"
                    android:contentDescription="Rate App Icon"
                    app:tint="#1E5AA8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rate App"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_rate_app"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Rate App"/>
            </LinearLayout>

            <!-- Log Out -->
            <LinearLayout
                android:id="@+id/card_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_bg"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="84dp"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logout"
                    android:contentDescription="Logout Icon"
                    app:tint="#1E5AA8"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/arrow_logout"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_right"
                    android:contentDescription="Log Out"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
