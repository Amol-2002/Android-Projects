<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_bg"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Profile circle -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- Name + last message -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            android:layout_marginBottom="5dp"
            android:src="@drawable/user" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:src="@drawable/stars1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:text="7674 orders"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/astroBlack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numerology, Tarot, Life Coach"
                android:textColor="@color/astroGreyText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marathi, English, Hindi"
                android:textColor="@color/astroGreyText"/>
            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp- 14 Years"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 70/"
                android:textSize="15dp"
                android:textColor="#FF0000"

                android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="min"
        android:textColor="#FF0000"
       />

        </LinearLayout>
        </LinearLayout>
<LinearLayout
    android:layout_gravity="start"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/verified"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="1dp"
            android:layout_gravity="start"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Chat  "
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
       android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="bold"
        android:layout_marginTop="27dp"
        android:background="@drawable/chat_button"
        android:textColor="#08BF11"/>
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/tvTime"/>
    </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
