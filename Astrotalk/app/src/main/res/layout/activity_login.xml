<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TOP "Skip" text -->
    <TextView
        android:id="@+id/tvSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text=""
        android:textColor="@color/astroBlack"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- WHITE AREA (upper part) -->
    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSkip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel">


        <!-- Illustration (people on yellow circle) -->
        <ImageView
            android:id="@+id/ivIllustration"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/astro_illustraction2"
        android:contentDescription="@string/app_name" />

        <!-- Title Astrotalk -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Astrotalk"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/astroBlack"
            android:layout_marginTop="8dp"/>

        <!-- Subtitle bubble -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Chat with Astrologer is FREE!"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/astroBlack"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:background="@drawable/bg_subtitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Login"-->
<!--                android:textSize="18sp"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="#1E5AA8"-->
<!--                android:layout_marginBottom="10dp"/>-->

            <!-- Username -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:drawableStart="@android:drawable/ic_lock_idle_lock"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Remember Me -->
<!--            <CheckBox-->
<!--                android:id="@+id/cbRemember"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Remember me"-->
<!--                android:layout_marginTop="10dp"/>-->

            <!-- Login Button -->


            <!-- GET OTP BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                app:cornerRadius="28dp"
                android:background="@drawable/bg_black_rounded"
                app:backgroundTint="@color/astroBlack" />

        </LinearLayout>




        <!-- Terms text -->
        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="By signing up, you agree to our Terms of Use and Privacy Policy"
            android:textSize="11sp"
            android:textColor="@color/astroGreyText"
            android:gravity="center"/>

        <!-- OR divider -->
        <LinearLayout
            android:id="@+id/dividerOr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="18dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/astroGreyText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Or  "
                android:textSize="14sp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/astroGreyText"/>
        </LinearLayout>

        <!-- LOGIN WITH TRUECALLER -->
        <TextView
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Login with Email"
            android:textAllCaps="false"
            android:textColor="@color/astroBlue"
            android:textSize="16sp"
            android:background="@drawable/bg_truecaller"

        android:paddingStart="16dp"/>
    </LinearLayout>

    <!-- BOTTOM YELLOW INFO AREA -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="18dp"
        android:paddingHorizontal="16dp"
        android:background="@color/astroYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100%\nPrivacy"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/astroBlack" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10000+\nTop astrologers of India"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/astroBlack" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3Cr+\nHappy customers"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/astroBlack" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
