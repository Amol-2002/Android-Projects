<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">

    <!-- Header (only white, no wallpaper) -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:src="@drawable/leftarrow"
            app:tint="@color/astroBlack"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/user"

            android:background="@drawable/bg_truecaller"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="User name"
            android:textColor="@color/astroBlack"
            android:textSize="19sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Wallpaper area (Chat + Input only) -->
    <LinearLayout
        android:id="@+id/chatContainer"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/astro"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Messages list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:clipToPadding="false"
            android:background="@android:color/transparent"/>

        <!-- Input bar -->
        <LinearLayout
            android:id="@+id/layoutInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:background="@android:color/transparent">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/message_input_bg"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Type a message"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:textColor="@color/astroBlack"
                android:textColorHint="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/bg_truecaller"
                android:layout_marginStart="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:src="@drawable/message"
                    app:tint="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
