<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ðŸ”¥ FIXED TOP HEADER (not scrollable) -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp">

        <!-- Left avatar -->
        <ImageView
            android:id="@+id/imgUserAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/user"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/astroYellow"
            android:padding="4dp" />

        <!-- Greeting -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Welcome"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/astroBlack" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Add Cash button -->
        <LinearLayout
            android:id="@+id/btnAddCash"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_subtitle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Cash"
                android:textSize="13sp"
                android:textColor="@color/astroBlack" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_add" />
        </LinearLayout>

        <!-- Language icon -->
        <ImageView
            android:id="@+id/imgLanguage"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_language" />

        <!-- Profile mini avatar -->
        <ImageView
            android:id="@+id/imgMiniAvatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_search"
            android:padding="4dp" />
    </LinearLayout>

    <!-- ðŸ”½ Scrollable area below header -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="70dp"
        android:fillViewport="true">

        <!-- ðŸ‘‰ your content here (NO HEADER inside) -->
        <!-- Just paste everything below the header from your previous code -->
        <!-- Search bar, icons, banners, recyclerView, etc -->

        <!-- YOUR SAME LINEARLAYOUT CONTENT STARTS HERE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Search bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_subtitle"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/astroGreyText"/>

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search"
                        android:textSize="14sp"
                        android:padding="0dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick feature buttons (Daily horoscope / Free kundli / etc.) -->
            <LinearLayout
                android:id="@+id/layoutQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="4">

                <!-- One item -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/astroYellow"
                        android:padding="16dp"
                        android:src="@drawable/ic_sun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Daily\nHoroscope"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Repeat for other 3 shortcuts -->
                <!-- Free Kundli -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/astroYellow"
                        android:padding="16dp"
                        app:tint="@color/astroBlack"
                        android:src="@drawable/kundali" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Free\nKundli"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Kundli Matching -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/astroYellow"
                        android:padding="16dp"
                        android:src="@drawable/marriage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Kundli\nMatching"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Astrology Blog -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="@color/astroYellow"
                        android:padding="16dp"
                        android:src="@drawable/ic_blog" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Astrology\nBlog"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Banner slider (you can use ViewPager2 or RecyclerView) -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpBanners"
                android:layout_width="match_parent"
                android:background="@drawable/header_bg"
                android:src="@drawable/ig_banner2"
                android:layout_height="120dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/header_bg"
                >
                <!-- Second static banner -->
                <ImageView
                    android:id="@+id/imgPromoBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ig_banner" />
            </LinearLayout>
            <!-- Astrologers section header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/header_bg"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAstrologersTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Numerologer"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/astroBlack" />

                <TextView
                    android:id="@+id/tvViewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textSize="14sp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/astroGreyText" />
            </LinearLayout>

            <!-- Horizontal list of astrologers -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAstrologers"
                android:layout_width="match_parent"
                android:background="@drawable/header_bg"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_anchor="@+id/layoutBottomActions"
                app:layout_anchorGravity="top|center" />


            <!-- Extra bottom spacing so content is not hidden behind bottom nav -->
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <!-- Bottom fixed buttons (same) -->
    <LinearLayout
        android:id="@+id/layoutBottomActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        android:paddingBottom="12dp">

        <Button
            android:id="@+id/btnChatAstrologer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Chat with Numerologer"
            android:textColor="@color/astroBlack"
            android:backgroundTint="@color/astroYellow"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Space android:layout_width="8dp" android:layout_height="0dp" />

        <Button
            android:id="@+id/btnCallAstrologer"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Call with Numerologer"
            android:textColor="@color/astroBlack"
            android:backgroundTint="@color/astroYellow"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
