<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/astroYellow"
    android:fitsSystemWindows="true">

    <!-- Modern Gradient Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_rounded"
            android:paddingTop="8dp"
            android:backgroundTint="@color/astroYellow"
            android:paddingBottom="16dp">

            <!-- Header with logo and actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Astrologers"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="-0.02"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="4" />

<!--                &lt;!&ndash; Action buttons &ndash;&gt;-->
<!--                <ImageView-->
<!--                    android:id="@+id/btnNewChat"-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_marginStart="12dp"-->
<!--                    android:src="@drawable/logo"-->
<!--                    android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                    android:padding="8dp"-->
<!--                    android:contentDescription="New Chat" />-->

<!--                <ImageView-->
<!--                    android:id="@+id/btnMenu"-->
<!--                    android:layout_width="40dp"-->
<!--                    android:layout_height="40dp"-->
<!--                    android:layout_marginStart="8dp"-->
<!--                    android:src="@drawable/logo"-->
<!--                    android:background="?attr/selectableItemBackgroundBorderless"-->
<!--                    android:padding="8dp"-->
<!--                    android:contentDescription="Menu" />-->
            </LinearLayout>

            <!-- Search Bar with modern design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSearch"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeColor="#E3E8FF"
                app:strokeWidth="1dp"
                android:outlineSpotShadowColor="#4066B4FF"
                android:outlineAmbientShadowColor="#4066B4FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/astroGreyText"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Search" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Search Astrologers..."
                        android:textColor="#1A1D2B"
                        android:textColorHint="#A0A5BF"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:fontFamily="sans-serif"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp" />

                    <ImageView
                        android:id="@+id/btnFilter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/leftarrow"
                        app:tint="#666B82"
                        android:visibility="gone"
                        android:contentDescription="Filter" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Chat List with Floating Action Button -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChats"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="88dp"
        android:background="#F4F7F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout" />

    <!-- Floating New Chat Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNewChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:backgroundTint="#4361EE"
        app:tint="@android:color/white"
        app:elevation="8dp"
        app:rippleColor="#3A56D4"
        app:srcCompat="@drawable/message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tab indicator for unread/pinned/etc -->
    <LinearLayout
        android:id="@+id/tabIndicator"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tab_indicator_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tabUnread"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="All"
            android:textColor="#4361EE"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#E3E8FF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/tabPinned"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tarot"
            android:textColor="#666B82"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#E3E8FF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/tabAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Palmistry"
            android:textColor="#666B82"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="#E3E8FF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/tabpa"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Numerology"
            android:textColor="#666B82"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>