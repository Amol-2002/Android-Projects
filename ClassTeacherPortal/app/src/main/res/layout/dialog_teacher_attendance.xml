<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@android:color/transparent">

    <!-- Header bar with title + close (cut) button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#007BFF"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome to Trifrnd"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ivCloseDialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Close"
            android:padding="2dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Card container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_bg"
        android:elevation="8dp">

        <!-- Big teacher name like screenshot -->
        <TextView
            android:id="@+id/tvTeacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Date row -->
        <TextView
            android:id="@+id/tvAttendanceDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 2025-11-25"
            android:textSize="15sp"
            android:textColor="#555"
            android:paddingBottom="14dp"
            android:gravity="center" />

        <!-- ONLY Present radio button -->
        <RadioButton
            android:id="@+id/rbPresent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Present"
            android:padding="6dp"
            android:textSize="15sp"
            android:textColor="#111"
            android:buttonTint="#1E5AA8"
            android:checked="true" />

        <!-- Submit button -->
        <Button
            android:id="@+id/btnSubmitAttendance"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="18dp"
            android:text="Submit"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:background="@drawable/rounded_bg" />
    </LinearLayout>
</LinearLayout>
