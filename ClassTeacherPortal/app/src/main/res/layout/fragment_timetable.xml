<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F2F4">

    <!-- Keep your header as before -->
    <LinearLayout
        android:background="@drawable/header_bg"
        android:backgroundTint="#1E5AA8"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/attarrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrowback"
                android:layout_marginEnd="10dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Table"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Day selector (same earlier) -->
    <LinearLayout
        android:id="@+id/selector_root"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_marginTop="96dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/selector_frame"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_bg"
            android:padding="6dp">

            <View
                android:id="@+id/selected_pill"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/pill_bg" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/days_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />
            </HorizontalScrollView>

        </FrameLayout>
    </LinearLayout>

    <!-- Table content area -->
    <FrameLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="50dp"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg">

            <TableLayout
                android:id="@+id/tableTimetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2"
                android:padding="8dp">
                <!-- rows added dynamically -->
            </TableLayout>


        </ScrollView>

        <!-- Empty state (image + text) -->
        <LinearLayout
            android:id="@+id/emptyBox"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"
            android:padding="24dp">

            <ImageView
                android:id="@+id/emptyImage"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/nodata" />

            <TextView
                android:id="@+id/emptyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected day Class schedule will be available\nonce your faculty is created in the system."
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginTop="12dp" />
        </LinearLayout>

    </FrameLayout>
</FrameLayout>