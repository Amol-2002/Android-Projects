<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F2F4">

    <!-- Header bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/header_bg"
        android:backgroundTint="#1E5AA8"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="22dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/attarrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrowback"
                android:layout_marginEnd="10dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Attendance"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="632dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:padding="8dp">

        <!-- Month / Year controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Month:"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:text="Year:"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvEmptyAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:text="No attendance for this month"
            android:textColor="#777"
            android:visibility="gone" />

        <!-- Horizontal scroll for big table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header row: SrNo, StudentName, 01..31 -->
                <LinearLayout
                    android:id="@+id/headerRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ECEFF1"
                    android:orientation="horizontal"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="Sr."
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Student Name"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <!-- 31 day headers -->
                    <!-- you can style red for current date in code if you want -->
                    <TextView
                        android:id="@+id/tvH1"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH2"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH3"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH4"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH5"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH6"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH7"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH8"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH9"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH10"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH11"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH12"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH13"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH14"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH15"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH16"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH17"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH18"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH19"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH20"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH21"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH22"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH23"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH24"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH25"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH26"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH27"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH28"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH29"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH30"
                        style="@style/DayHeaderStyle" />

                    <TextView
                        android:id="@+id/tvH31"
                        style="@style/DayHeaderStyle" />
                </LinearLayout>

                <!-- RecyclerView rows -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAttendanceGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</FrameLayout>
