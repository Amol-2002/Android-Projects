<?xml version="1.0" encoding="utf-8"?>
<resources><style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="itemIconSize">30dp</item> <!-- ðŸ‘ˆ Icon size -->
    <item name="itemTextAppearanceActive">@style/BottomNavTextActive</item>
    <item name="itemTextAppearanceInactive">@style/BottomNavTextInactive</item>

    <item name="android:statusBarColor">@color/brandBlueDark</item>
    <item name="android:navigationBarColor">@color/brandBlue</item>

    <!-- Make icons white -->
    <item name="android:windowLightStatusBar">false</item>


</style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- other items -->
        <item name="android:statusBarColor">@color/brandBlue</item>
    </style>

    <style name="DayHeaderStyle">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DayCellStyle">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:background">@drawable/day_cell_bg</item>
    </style>


    <style name="LabelText">
        <item name="android:textColor">#9CA3AF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="ValueText">
        <item name="android:textColor">#111827</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="dayHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- Active text size -->
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item> <!-- Inactive text size -->
    </style>

    <style name="BottomNavTextActive1" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFFFFF</item> <!-- White on selected circle -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavTextInactive1" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#757575</item> <!-- Grey unselected -->
        <item name="android:textSize">14sp</item>
    </style>



</resources>